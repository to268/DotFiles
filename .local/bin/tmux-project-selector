#!/usr/bin/env bash

[ $# -eq 1 ] && cmd=$1

if [[ $# -eq 2 ]]; then
    selected=$2
else
    items=$(find ~/files/Dev -maxdepth 2 -mindepth 2 -type d | sed "/.*src-packages.*$/d;/.*website.*$/d")
    items+=$(find ~/files/Dev -maxdepth 1 -mindepth 1 -type d | grep "website" | sed "s/\(.*\)/\n\1/")
    selected=$(echo "$items" | fzf)
fi

project_name=`basename $selected | tr . _`

tmux switch-client -t $project_name
if [[ $? -eq 0 ]]; then
    exit 0
fi

tmux new-session -c $selected -d -s $project_name $cmd && tmux switch-client -t $project_name || tmux new -c $selected -A -s $project_name
