#!/usr/bin/env bash

hours=$(date "+%I")

case $hours in
	01) echo -n "🕐 ";;
	02) echo -n "🕑 ";;
	03) echo -n "🕒 ";;
	04) echo -n "🕓 ";;
	05) echo -n "🕔 ";;
	06) echo -n "🕕 ";;
	07) echo -n "🕖 ";;
	08) echo -n "🕗 ";;
	09) echo -n "🕘 ";;
	10) echo -n "🕙 ";;
	11) echo -n "🕚 ";;
	12) echo -n "🕛 ";;
	*) echo -n "🕛 ";;
esac

date '+%a %d %b %Y %H:%M '
