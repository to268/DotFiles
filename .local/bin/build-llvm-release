#!/usr/bin/env bash

rm -rf build
doas rm -rf /usr/local/llvm-dev/*

cmake -G "Ninja" -S llvm -B build -DCMAKE_EXPORT_COMPILE_COMMANDS=ON -DCMAKE_BUILD_TYPE=Release \
-DCMAKE_C_COMPILER=/usr/bin/clang -DCMAKE_CXX_COMPILER=/usr/bin/clang++ -DLLVM_USE_LINKER=mold \
-DBUILD_SHARED_LIBS=ON -DLLVM_ENABLE_PROJECTS="llvm;mlir" -DLLVM_PARALLEL_LINK_JOBS=2 \
-DLLVM_CCACHE_BUILD=ON -DLLVM_ENABLE_ASSERTIONS=ON -DCMAKE_INSTALL_PREFIX=/usr/local/llvm-dev

cp -f build/compile_commands.json .
cd build && time (ninja && ninja check all)
doas ninja install
